<div class="container-fluid" style="height : 100vh">
    <div class="row justify-content-center align-items-center" style="height : 100vh">
        <div class="col-4 text-dark">
            <form method="POST" action="/admin/products/update/{{product.id}}" enctype="multipart/form-data">
                <div class="form-floating m-3">
                    <input type="text" class="form-control" name="city" value="{{product.city}}" placeholder="City" >
                    <label for="city">Ciudad</label>
                </div>
                <div class="form-floating m-3">
                    <input type="text" class="form-control" name="description" value="{{product.description}}"  
                    placeholder="Description">
                    <label for="description">Descripci√≥n</label>
                </div>
                <div class="form-floating m-3">
                    <input type="number" class="form-control" name="price" 
                    value="{{product.price}}" placeholder="Price">
                    <label for="price">Precio</label>
                </div>
                <div class="form-floating m-3">         
                    <select class="form-select form-select-sm" aria-label=".form-select-sm" name="id_category">
                    <option value="{{product.id_category}}">{{product.name_categ}}</option> 
                    {{#each category}}
                    <option value="{{id}}">{{name_categ}}</option>
                    {{/each}}
                    </select>
          
                </div>
               
                <div class="form-floating m-3">
                   
                    <input type="file" name="img">
                    
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-info mt-3">Editar producto</button>
                </div>
            </form>
        </div>

    </div>
</div>