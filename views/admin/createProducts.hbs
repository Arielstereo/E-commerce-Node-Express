<div class="container-fluid" style="height : 100vh">
    <h1 class="text-center border-bottom p-5 m-3" >Crear nuevo producto</h1>
    <div class="row d-flex justify-content-center mt-5" style="height : 100vh">
        <div class="col-4">
            <img class="img-fluid img-form_product" src="/images/product_form.svg" alt="">
        </div>
        <div class="col-4">
            <form class="form-product" method="POST" action="/admin/products/create" enctype="multipart/form-data">
                <div class="form-floating m-3">
                    <input type="text" class="form-control" name="city" placeholder="City" >
                    <label for="city">Ciudad</label>
                </div>
                <div class="form-floating m-3">
                    <input type="text" class="form-control" name="description" placeholder="Description">
                    <label for="description">Descripci√≥n</label>
                </div>
                <div class="form-floating m-3">
                    <input type="number" class="form-control" name="price" placeholder="Price">
                    <label for="price">Precio</label>
                </div>
                <div class="form-floating m-3">         
                    <select class="form-select form-select-sm" aria-label=".form-select-sm" name="id_category">
                    {{#each category}}    
                  
                    <option value="{{id}}">{{name_categ}}</option> 
                   
                    {{/each}}

                    </select>
          
                </div>
               
                <div class="form-floating m-3">
                   
                    <input type="file" name="img">
                    
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-info mt-3">Agregar producto</button>
                </div>
            </form>
        </div>
               
    </div>

</div>